{
  // ============================================
  // OPTIMIZACIONES DE RENDIMIENTO
  // ============================================
  
  // Excluir carpetas del file watcher (reduce procesos de monitoreo)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/out/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/.swc/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/playwright/.cache/**": true,
    "**/storybook-static/**": true,
    "**/.vercel/**": true,
    "**/migrations/**": true,
    "**/local/**": true,
    "**/*.db": true,
    "**/*.log": true
  },

  // Excluir de búsquedas (reduce procesos de indexación)
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/out": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/.swc": true,
    "**/test-results": true,
    "**/playwright-report": true,
    "**/playwright/.cache": true,
    "**/storybook-static": true,
    "**/.vercel": true,
    "**/migrations": true,
    "**/local": true,
    "**/*.db": true,
    "**/*.log": true,
    "**/package-lock.json": true
  },

  // ============================================
  // OPTIMIZACIONES DE TYPESCRIPT
  // ============================================
  
  // Reducir el análisis automático de TypeScript
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/.next",
      "**/out",
      "**/dist",
      "**/build",
      "**/coverage",
      "**/.turbo",
      "**/test-results",
      "**/playwright-report"
    ]
  },
  
  // Desactivar validación en archivos que no estás editando
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  
  // Usar el servidor de TypeScript del workspace
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // ============================================
  // OPTIMIZACIONES DE JAVASCRIPT
  // ============================================
  
  // Reducir análisis de JavaScript
  "javascript.validate.enable": true,
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ============================================
  // OPTIMIZACIONES DE ARCHIVOS
  // ============================================
  
  // Limitar el número de archivos abiertos
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,
  
  // Desactivar seguimiento de archivos recientes en carpetas grandes
  "files.exclude": {
    "**/.git": false,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  // ============================================
  // OPTIMIZACIONES DE EXTENSIONES
  // ============================================
  
  // Desactivar extensiones que no necesitas constantemente
  // (Ajusta según tus necesidades)
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,

  // ============================================
  // OPTIMIZACIONES DE EDITOR
  // ============================================
  
  // Reducir procesamiento de código en tiempo real
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  
  // Desactivar sugerencias en strings y comentarios
  "editor.suggest.showWords": false,
  "editor.wordBasedSuggestions": "off",
  
  // Optimizar renderizado
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,

  // ============================================
  // OPTIMIZACIONES DE ESLINT
  // ============================================
  
  // Reducir validación de ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.lintTask.enable": true,
  "eslint.run": "onType",
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // ============================================
  // OPTIMIZACIONES DE NEXT.JS
  // ============================================
  
  // Configuración específica para Next.js
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // ============================================
  // OPTIMIZACIONES GENERALES
  // ============================================
  
  // Reducir telemetría y procesos en segundo plano
  "telemetry.telemetryLevel": "off",
  
  // Optimizar actualizaciones
  "update.mode": "manual",
  
  // Reducir procesos de Git
  "git.enabled": true,
  "git.autorefresh": false,
  "git.autoRepositoryDetection": false,
  
  // Limitar procesos de terminal
  "terminal.integrated.maxPersistentProcessesPerWorkspace": 3,
  "i18n-ally.localesPaths": [
    "src/locales"
  ],
  "editor.guides.indentation": false
}
